<p id="notice"><%= notice %></p>
<h1>Users</h1>
<%= link_to 'New User', new_user_path %>
<p>
</p>
<table id="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Email</th>
      <th>Superadmin role</th>
      <th>Doctor role</th>
      <th>Nurse role</th>
      <th>User role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.superadmin_role %></td>
        <td><%= user.doctor_role %></td>
        <td><%= user.nurse_role %></td>
        <td><%= user.user_role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


